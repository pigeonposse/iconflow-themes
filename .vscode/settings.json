{
    "files.autoSave": "onFocusChange",
    "editor.fontSize": 14,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.markdownlint": true
    },
    "markdownlint.ignore": [
        "**/LICENSE"
    ],
    "markdownlint.config": {
        "default": true,
        "MD013": false,
        "MD033": false
    },
}